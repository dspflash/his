<GroupBox Name="GBDVhospital" cols="xs12 sm12 md12 lg12"><Ctrls>
<ListCtrl Name="hospital_vLst" ToolTip="ttp_hospital_v" Size="700,450" OnLoad="init" Heading="hospitalname,250;hospitalno,100;hospitalid,55;opera,55;uptime,150;" loadedclick="0">
	<DbDetails >
<Index>hospitalid</Index>
<DbTable>his.hospital h left join his.users u on h.opera=u.user_id</DbTable>
<Data>h.hospitalname,h.hospitalno,h.hospitalid,u.user_name opera,h.uptime</Data>
<Order>hospitalid</Order></DbDetails>
<operator refresh="1" initial="0" firstpage="0" prepage="0" nextpage="0">
<op text="modify"><DbDetails><Where>hospitalid='%{hospital_vLst[hospitalid]}'</Where></DbDetails><submit namelist="DbDetails" next="$this.hospital.hospitalLst"/><assign name="$this.hospital.frmwndctrl" expr="%{this}"/></op>
<op text="delete" needconfirm="1"><DbDetails>
<DbTable>his.hospital</DbTable>
<Where>hospitalid='%{hospital_vLst[hospitalid]}'</Where>
<queryFormat>delete from %{table} where %{where}</queryFormat></DbDetails>
<submit namelist="DbDetails"/><submit/></op>
</operator>
<OnChanged>
<assign name="pgcur_hospital" expr="js(%{hospital_vLst[currentpage]}+1)"/>
<assign name="pgscb_hospital" expr="js(%{hospital_vLst[currentpage]}+1)" function="SetSel"/>
</OnChanged></ListCtrl>
</Ctrls></GroupBox>