<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGxiefang_detail"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_xiefang_detail" Size="40,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>xiefang_detailid</Index>
<DbTable>his.xiefang_detail x left join his.medicine_info m on x.medicineid=m.medicineid</DbTable>
<Data>count(*) records</Data>
<Order>xiefang_detailid</Order><Queryformat>select %{data} from (select x.xiefang_detailid from %{dbtable} %{where} GROUP BY x.xiefang_detailid  ORDER BY x.xiefang_detailid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_xiefang_detail" expr="js(Math.ceil(%{records_xiefang_detail}/%{xiefang_detail_vLst[countsperpage]}))"/>
<assign name="pgscb_xiefang_detail" expr="js('1~'+Math.ceil(%{records_xiefang_detail}/%{xiefang_detail_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>
<!--ComboBox Weight="60" ToolTip="ttp_pgs" Name="pgscb_xiefang_detail" Size="60,20"><OnSelEndOK><submit next="xiefang_detail_vLst" function="GetPage(%{pgscb_xiefang_detail}-1)"/></OnSelEndOK></ComboBox-->
<TextBox Weight="30" ToolTip="ttp_pgs" Name="pgs_xiefang_detail" Size="30,20" readonly="1"/>
<TextBox Weight="30" ToolTip="ttp_pgcur" Name="pgcur_xiefang_detail" Size="30,20"/>
<Button Text="go2Page" Name="go2pagexiefang_detail_vLst" Size="50,20"><OnClick><submit next="xiefang_detail_vLst" function="GetPage(%{pgcur_xiefang_detail}-1)"/></OnClick></Button>
</Ctrls></GroupBox>
