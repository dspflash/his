<TextBox Weight="30" ToolTip="ttp_pgs" Name="pgs_equipment_type" Size="30,20" readonly="1"/>
<TextBox Weight="30" ToolTip="ttp_pgcur" Name="pgcur_equipment_type" Size="30,20"/>
<Button Text="go2Page" Name="go2pageequipment_type_vLst" Size="50,20"><OnClick><submit next="equipment_type_vLst" function="GetPage(%{pgcur_equipment_type}-1)"/></OnClick></Button>
</Ctrls></GroupBox>
