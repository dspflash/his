<GroupBox cols="xs12 sm6 md4" Name="GBOPVmedication" Size="100,100"><Ctrls>
<Button Text="delete" ToolTip="ttp_deletemedication" Name="deletemedication" Size="50,20">
	<OnClick>
	<DbDetails fcsm="1">
<DbTable>his.medication</DbTable>
<Where>medicationid='%{medicationLst[medicationid]}'</Where>
<queryFormat>delete from %{table} where %{where}</queryFormat></DbDetails>
	<submit namelist="DbDetails"/><submit next="searchmedication" function="click"/>
	</OnClick>
	</Button><TAB/>
<Button Text="refresh" ToolTip="ttp_refreshmedication" Name="searchmedication" Size="50,20">
			  <OnClick><submit next="medicationLst"/>	</OnClick>
</Button>
<TAB/><TAB/><Button Text="firstpage" Name="FPmedicationLst" OnClick="(medicationLst)GetPage(First)" Size="50,20"/>
<TAB/><Button Text="prepage" Name="PREmedicationLst" OnClick="(medicationLst)GetPage(Pre)" Size="50,20"/>
<TAB/><Button Text="nextpage" Name="NPmedicationLst" OnClick="(medicationLst)GetPage(Next)" Size="50,20"/>
</Ctrls></GroupBox>