<GroupBox cols="xs12 sm6 md4" Name="GBOPVmedication_detail" Size="100,100"><Ctrls>
<Button Text="delete" ToolTip="ttp_deletemedication_detail" Name="deletemedication_detail" Size="50,20">
	<OnClick>
	<DbDetails fcsm="1">
<DbTable>his.medication_detail</DbTable>
<Where>medication_detailid='%{medication_detailLst[medication_detailid]}'</Where>
<queryFormat>delete from %{table} where %{where}</queryFormat></DbDetails>
	<submit namelist="DbDetails"/><submit next="searchmedication_detail" function="click"/>
	</OnClick>
	</Button><TAB/>
<Button Text="refresh" ToolTip="ttp_refreshmedication_detail" Name="searchmedication_detail" Size="50,20">
			  <OnClick><submit next="medication_detailLst"/>	</OnClick>
</Button>
<TAB/><TAB/><Button Text="firstpage" Name="FPmedication_detailLst" OnClick="(medication_detailLst)GetPage(First)" Size="50,20"/>
<TAB/><Button Text="prepage" Name="PREmedication_detailLst" OnClick="(medication_detailLst)GetPage(Pre)" Size="50,20"/>
<TAB/><Button Text="nextpage" Name="NPmedication_detailLst" OnClick="(medication_detailLst)GetPage(Next)" Size="50,20"/>
</Ctrls></GroupBox>