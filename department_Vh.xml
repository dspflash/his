<GroupBox Name="GBDVdepartment" cols="xs12 sm12 md12 lg12" visible="0"><Ctrls>
<ListCtrl Name="departmentLst" ToolTip="ttp_department" Size="70,20" visible="0" loadedclick="1">
	<DbDetails fcsm="1">
<Index>departmentid</Index>
<DbTable>his.department</DbTable>
<Data>departname,opera,uptime,departmentid</Data>
<Order>departmentid</Order></DbDetails>
<OnClick><assign name="opera[user_id]" expr="%{departmentLst[opera]}" function="SetSel"/>
<if cond="'%{departmentid}'"><SetVisible name="insertdepartment" Visible="0"/><SetVisible name="modifydepartment" Visible="1"/></if>
</OnClick>
</ListCtrl>
</Ctrls></GroupBox>