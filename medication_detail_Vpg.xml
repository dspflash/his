<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGmedication_detail"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_medication_detail" Size="40,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>medication_detailid</Index>
<DbTable>his.medication_detail m left join his.medicine_info m0 on m.medicineid=m0.medicineid left join his.status_option s on m.status=s.statuscode</DbTable>
<Data>count(*) records</Data>
<Order>medication_detailid</Order><Queryformat>select %{data} from (select m.medication_detailid from %{dbtable} %{where} GROUP BY m.medication_detailid  ORDER BY m.medication_detailid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_medication_detail" expr="js(Math.ceil(%{records_medication_detail}/%{medication_detail_vLst[countsperpage]}))"/>
<assign name="pgscb_medication_detail" expr="js('1~'+Math.ceil(%{records_medication_detail}/%{medication_detail_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>
<!--ComboBox Weight="60" ToolTip="ttp_pgs" Name="pgscb_medication_detail" Size="60,20"><OnSelEndOK><submit next="medication_detail_vLst" function="GetPage(%{pgscb_medication_detail}-1)"/></OnSelEndOK></ComboBox-->
<TextBox Weight="30" ToolTip="ttp_pgs" Name="pgs_medication_detail" Size="30,20" readonly="1"/>
<TextBox Weight="30" ToolTip="ttp_pgcur" Name="pgcur_medication_detail" Size="30,20"/>
<Button Text="go2Page" Name="go2pagemedication_detail_vLst" Size="50,20"><OnClick><submit next="medication_detail_vLst" function="GetPage(%{pgcur_medication_detail}-1)"/></OnClick></Button>
</Ctrls></GroupBox>
