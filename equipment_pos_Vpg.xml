<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGequipment_pos"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_equipment_pos" Size="40,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>posid</Index>
<DbTable>his.equipment_pos e left join his.users u on e.opera=u.user_id</DbTable>
<Data>count(*) records</Data>
<Order>posid</Order><Queryformat>select %{data} from (select e.posid from %{dbtable} %{where} GROUP BY e.posid  ORDER BY e.posid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_equipment_pos" expr="js(Math.ceil(%{records_equipment_pos}/%{equipment_pos_vLst[countsperpage]}))"/>
<assign name="pgscb_equipment_pos" expr="js('1~'+Math.ceil(%{records_equipment_pos}/%{equipment_pos_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>
