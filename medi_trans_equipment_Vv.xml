<GroupBox Name="GBDVmedi_trans" cols="xs12 sm12 md12 lg12"><Ctrls>
<ListCtrl Name="medi_trans_vLst" ToolTip="ttp_medi_trans_v" Size="700,450" OnLoad="init" Heading="medication_detailid,100;medicineid,55;bottleid,55;equipmentid,55;equipment_posid,55;equipment_pos_degree,30;qtyapply,90;qtyrelease,90;opera,55;uptime,150;transid,100;weight1,90;weight2,90;status,30;" loadedclick="0">
	<DbDetails >
<Index>transid</Index>
<DbTable>his.medi_trans m left join his.mt_cc_b_m m0 on m.medication_detailid=m0.medication_detailid left join his.users u on m.opera=u.user_id</DbTable>
<Data>m0.medicineno medication_detailid,m.medicineid,m.bottleid,m.equipmentid,m.equipment_posid,m.equipment_pos_degree,m.qtyapply,m.qtyrelease,u.user_name opera,m.uptime,m.transid,m.weight1,m.weight2,m.status</Data>
<Order>transid</Order></DbDetails>
<operator refresh="1" initial="0" firstpage="0" prepage="0" nextpage="0">
<op text="modify"><DbDetails><Where>transid='%{medi_trans_vLst[transid]}'</Where></DbDetails><submit namelist="DbDetails" next="$this.medi_trans_equipment.medi_transLst"/><assign name="$this.medi_trans_equipment.frmwndctrl" expr="%{this}"/></op>
<op text="delete" needconfirm="1"><DbDetails>
<DbTable>his.medi_trans</DbTable>
<Where>transid='%{medi_trans_vLst[transid]}'</Where>
<queryFormat>delete from %{table} where %{where}</queryFormat></DbDetails>
<submit namelist="DbDetails"/><submit/></op>
</operator>
<OnChanged>
<assign name="pgcur_medi_trans" expr="js(%{medi_trans_vLst[currentpage]}+1)"/>
<assign name="pgscb_medi_trans" expr="js(%{medi_trans_vLst[currentpage]}+1)" function="SetSel"/>
</OnChanged></ListCtrl>
</Ctrls></GroupBox>