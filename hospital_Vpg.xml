<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGhospital"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_hospital" Size="40,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>hospitalid</Index>
<DbTable>his.hospital h left join his.users u on h.opera=u.user_id</DbTable>
<Data>count(*) records</Data>
<Order>hospitalid</Order><Queryformat>select %{data} from (select h.hospitalid from %{dbtable} %{where} GROUP BY h.hospitalid  ORDER BY h.hospitalid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_hospital" expr="js(Math.ceil(%{records_hospital}/%{hospital_vLst[countsperpage]}))"/>
<assign name="pgscb_hospital" expr="js('1~'+Math.ceil(%{records_hospital}/%{hospital_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>
<!--ComboBox Weight="60" ToolTip="ttp_pgs" Name="pgscb_hospital" Size="60,20"><OnSelEndOK><submit next="hospital_vLst" function="GetPage(%{pgscb_hospital}-1)"/></OnSelEndOK></ComboBox-->
<TextBox Weight="30" ToolTip="ttp_pgs" Name="pgs_hospital" Size="30,20" readonly="1"/>
<TextBox Weight="30" ToolTip="ttp_pgcur" Name="pgcur_hospital" Size="30,20"/>
<Button Text="go2Page" Name="go2pagehospital_vLst" Size="50,20"><OnClick><submit next="hospital_vLst" function="GetPage(%{pgcur_hospital}-1)"/></OnClick></Button>
</Ctrls></GroupBox>
