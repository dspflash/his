<GroupBox cols="xs12 sm6 md4" Name="GBOPVcomputers" Size="100,100"><Ctrls>
<Button Text="delete" ToolTip="ttp_deletecomputers" Name="deletecomputers" Size="50,20">
	<OnClick>
	<DbDetails fcsm="1">
<DbTable>his.computers</DbTable>
<Where>computerid='%{computersLst[computerid]}'</Where>
<queryFormat>delete from %{table} where %{where}</queryFormat></DbDetails>
	<submit namelist="DbDetails"/><submit next="searchcomputers" function="click"/>
	</OnClick>
	</Button><TAB/>
<Button Text="refresh" ToolTip="ttp_refreshcomputers" Name="searchcomputers" Size="50,20">
			  <OnClick><submit next="computersLst"/>	</OnClick>
</Button>
<TAB/><TAB/><Button Text="firstpage" Name="FPcomputersLst" OnClick="(computersLst)GetPage(First)" Size="50,20"/>
<TAB/><Button Text="prepage" Name="PREcomputersLst" OnClick="(computersLst)GetPage(Pre)" Size="50,20"/>
<TAB/><Button Text="nextpage" Name="NPcomputersLst" OnClick="(computersLst)GetPage(Next)" Size="50,20"/>
</Ctrls></GroupBox>