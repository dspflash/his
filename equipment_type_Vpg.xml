<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGequipment_type"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_equipment_type" Size="40,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>equipmenttypeid</Index>
<DbTable>his.equipment_type e left join his.users u on e.opera=u.user_id</DbTable>
<Data>count(*) records</Data>
<Order>equipmenttypeid</Order><Queryformat>select %{data} from (select e.equipmenttypeid from %{dbtable} %{where} GROUP BY e.equipmenttypeid  ORDER BY e.equipmenttypeid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_equipment_type" expr="js(Math.ceil(%{records_equipment_type}/%{equipment_type_vLst[countsperpage]}))"/>
<assign name="pgscb_equipment_type" expr="js('1~'+Math.ceil(%{records_equipment_type}/%{equipment_type_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>
